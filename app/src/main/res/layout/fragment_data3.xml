<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.data3">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".activites.tambahSiswa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Isi Data Dengan Benar"
            android:textSize="20dp"
            android:textColor="@color/blackColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RelativeLayout
            android:id="@+id/alamatView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/gambar5"
                android:layout_height="120dp"
                android:layout_width="50dp"
                android:src="@drawable/address"
                android:background="@color/warnaAnak"
                android:paddingLeft="10dp"
                />

            <EditText
                android:id="@+id/alamat_text"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:hint="Alamat"
                android:background="@color/warnaAnak"
                android:paddingLeft="20dp"
                android:layout_alignBottom="@+id/gambar5"
                android:layout_toRightOf="@+id/gambar5"
                android:textColor="@color/whiteColor"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>